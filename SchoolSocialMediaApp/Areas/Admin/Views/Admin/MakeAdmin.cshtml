@model MakeUserAdminViewModel
@{
    ViewBag.Title = "Make user admin";
}

@if (ViewBag.Message != null)
{
    <h2 class="badge @ViewBag.ClassOfMessage">@ViewBag.Message</h2>
}

<h1 class="text-danger">@ViewBag.Title</h1>
<div class="row">
    <div class="col-md-6">
        <img class="img-thumbnail rounded-circle custom-image" src="@Model.ImageUrl" />
        <h3>Name: @Model.FirstName @Model.LastName</h3>
        <h3>Username: @Model.Username</h3>
        <h3>Email: @Model.Email</h3>
        <h3>Phonenumber: @Model.PhoneNumber</h3>
    </div>
    <div class="col-md-6">
        <h2 class="text-bg-danger">Are you sure you want to give administration permissions to this user?</h2>
        <h2 class="text-bg-danger">If the user is part of a school he will automatically quit the school and become admin.</h2>
        <h2 class="text-bg-danger">If the user is principal you have to delete the school and then give the permissions.</h2>
    </div>

</div>
<form method="post" class="col-md-5">
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Confirm ADMIN Password">
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Id" type="hidden" value="@Model.Id" />
        <input asp-for="FirstName" type="hidden" value="@Model.FirstName" />
        <input asp-for="LastName" type="hidden" value="@Model.LastName" />
        <input asp-for="Username" type="hidden" value="@Model.Username" />
        <input asp-for="Email" type="hidden" value="@Model.Email" />
        <input asp-for="PhoneNumber" type="hidden" value="@Model.PhoneNumber" />
        <input asp-for="ImageUrl" type="hidden" value="@Model.ImageUrl" />
    </div>
    <button class="btn btn-danger col-md-3">Delete</button>
</form>
<a class="btn btn-success col align-self-md-center" asp-area="Admin" asp-controller="Admin" asp-action="AdminPanel">Cancel</a>

<style>
    .custom-image {
        max-width: 250px;
        height: auto;
    }

    .custom-text {
        font-size: 18px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}