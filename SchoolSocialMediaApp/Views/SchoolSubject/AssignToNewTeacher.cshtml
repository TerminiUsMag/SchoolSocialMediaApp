@model List<TeacherViewModel>

@{
    ViewBag.Title = $"Change '{ViewBag.SubjectName}' 's teacher";
}

<h1>@ViewBag.Title</h1>

@if (ViewBag.Message != null)
{
    <h2 class="badge @ViewBag.ClassOfMessage">@ViewBag.Message</h2>
}

<table class="table">
    <thead>
        <tr>
            <th>Teacher's Name</th>
            <th>Number of subjects taught</th>
            <th></th>
            <!-- Add more teacher properties here -->
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.FullName</td>
                <td>@teacher.Subjects.Count</td>
                <td>
                    <form asp-controller="SchoolSubject" asp-action="AddTeacherToSubject" method="post">
                        <input type="hidden" name="teacherId" value="@teacher.Id" />
                        <input type="hidden" name="subjectId" value="@ViewBag.SubjectId" />
                        <input type="hidden" name="schoolId" value="@teacher.SchoolId" />
                        <button type="submit" class="btn btn-primary">Assign teacher to Subject - '@ViewBag.SubjectName'</button>
                    </form>
                </td>
                <!-- Add more teacher properties here -->
            </tr>
        }
    </tbody>
</table>