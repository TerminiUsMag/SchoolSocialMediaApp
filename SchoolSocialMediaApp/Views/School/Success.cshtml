@model SchoolViewModel
@{
    ViewBag.Title = "Success";
}

<h1>@ViewBag.Title</h1>


<div class="row">
    <div class="col-md-4"> </div>
    <div class="col-md-4">

        <div class="card text-black mb-3" style="max-width: 25rem;">
            <div class="card-header">
                <h3 class="text-dark">Your School:</h3>
            </div>
            <div class="card-body text-center">
                <h5 class="card-title">@Model.Name</h5>
                <img class="card-img-top img" src="@Model.ImageUrl" alt="School image">
                <p class="card-text">Location: @Model.Location</p>
                <a asp-controller="School" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Details</a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4"> </div>
    <div class="col-md-4" style="text-align:center">
        <h2 class="text-bg-success badge " style="font-size: small">You have successfully registered your school</h2>
    </div>
    <div class="col-md-4"> </div>
</div>
<div class="row">
    <a class="btn btn-info btn-group-lg mt-3 btn-xl" href="@Url.Action("Index", "Home")">Back to Home</a>

</div>