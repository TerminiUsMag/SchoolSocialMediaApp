@model IEnumerable<SchoolViewModel>
@{
    ViewBag.Title = "Registered Schools";
}

<h1>@ViewBag.Title</h1>

@if (Model.Count() == 0)
{
    <h2>No schools to display.</h2>
}
else
{
    <div class="row">
    @foreach (var school in Model)
    {
        <div class="card text-black mb-3 m-4" style="max-width: 20rem;">
            <div class="card-header">
                <h3 class="text-dark">School Details</h3>
            </div>
            <div class="card-body text-center">
                <h5 class="card-title">@school.Name</h5>
                <img class="card-img-top img" src="@school.ImageUrl" alt="School image">
                <p class="card-text">Location: @school.Location</p>
                <p class="card-text">Description: @school.Description</p>
                <a href="@Url.Action("Details","School")" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
    </div>
}
