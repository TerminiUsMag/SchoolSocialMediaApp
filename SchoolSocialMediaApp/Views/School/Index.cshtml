@model IEnumerable<SchoolViewModel>
@{
    ViewBag.Title = "Registered Schools";
}

<h1>@ViewBag.Title</h1>

@if (Model.Count() == 0)
{
    <h2>No schools to display.</h2>
}
else
{
    foreach (var school in Model)
    {
        <h2>@school.Name</h2>
        <p>@school.Location</p>
        <img src="@school.ImageUrl" alt="School Image" />
        <p>@school.Description</p>
    }
}
