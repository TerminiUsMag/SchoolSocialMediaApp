                        <h6 class="text-uppercase fw-bold mb-4">Contact</h6>
                        <p><i class="fas fa-home me-3"></i> Sofia, Bulgaria</p>
                        <p>
                            <i class="fas fa-envelope me-3"></i>
                            nikolaidan1@abv.bg
                        </p>
                        <p><i class="fas fa-phone me-3"></i> +359 888***882</p>
                    </div>
                    <!-- Grid column -->
