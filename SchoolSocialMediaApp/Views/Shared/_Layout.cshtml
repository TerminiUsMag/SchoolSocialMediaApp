        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2023 Copyright:
            <a asp-controller="Home" asp-action="Index" class="text-reset fw-bold">Schoolary.com </a>
        </div>
        <!-- Copyright -->
    </footer>
