@model UserManageViewModel;
@{
    ViewBag.Title = "Manage Account";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="@ViewBag.ClassOfMessage badge">@ViewBag.Message</h1>
            <div class="card">
                <div class="card-header">
                    <h4>Manage Account</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="@Model.ImageUrl" class="img-fluid" alt="Profile Image" />
                        </div>
                        <div class="col-md-8">
                            <form method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="FirstName"></label>
                                    <input asp-for="FirstName" type="text" class="form-control" value="@Model.FirstName">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName"></label>
                                    <input asp-for="LastName" type="text" class="form-control" value="@Model.LastName">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Username">Username (First name and last name changes affect your username !)</label>
                                    <input asp-for="Username" type="text" class="form-control" value="@Model.Username" readonly>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">Email Address</label>
                                    <input asp-for="Email" type="email" class="form-control" value="@Model.Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PhoneNumber"></label>
                                    <input asp-for="PhoneNumber" type="number" class="form-control" value="@Model.PhoneNumber">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <input asp-for="Id" type="hidden" name="id" value="@Model.Id">
                                <input  asp-for="ImageUrl" type="hidden" name="imageUrl" value="@Model.ImageUrl">

                                @*                        <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password">
                                </div>
                                <div class="form-group">
                                <label for="confirmPassword">Confirm Password</label>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                                </div>*@
                                <div class="form-group">
                                    <label asp-for="ImageFile">Upload New Profile Picture</label>
                                    <input asp-for="ImageFile" type="file" class="form-control" id="imageFile" name="imageFile">
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
                            </form>
                        </div>
                    </div>
                </div>
                <a class="btn btn-danger" asp-controller="Account" asp-action="Delete">Delete Account</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}